<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uvm.loginregister.UserAreaActivity">

    <TextView

        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvWelcomeMsg"
        android:textSize="24sp" />

        android:text="Welcome to Bazaar!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWelcomeMsg"
        android:textSize="24sp"
        tools:text="Welcome to Bazaar!"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/usrnme"
        android:layout_below="@+id/tvWelcomeMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/usrnme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        android:id="@+id/usrnme"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subGames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/subGamesList"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/profilepic"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_below="@+id/usrnme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/usrnme"
        android:layout_alignEnd="@+id/usrnme" />

    <TextView
        android:text="Subscribed Games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subGames"
        tools:text="Subscribed Games"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subgroupslist"
        android:layout_marginBottom="176dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Subscribed Groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subGroups"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_above="@+id/subgroupslist"
        android:layout_alignRight="@+id/subGames"
        android:layout_alignEnd="@+id/subGames" />

</RelativeLayout>
