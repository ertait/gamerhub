<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uvm.loginregister.edu.uvm.bazaar.UserAreaActivity">

    <TextView
        android:text="Welcome to Bazaar!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWelcomeMsg"
        tools:text="Welcome to Bazaar!"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/btGames" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usrnme"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/profilepic"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_below="@+id/usrnme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/usrnme"
        android:layout_alignEnd="@+id/usrnme" />

    <Button
        android:text="Game List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btGames"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subGamesList"
        android:layout_toEndOf="@+id/subGroups"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/devGames"
        android:layout_alignBottom="@+id/subGroups" />

    <TextView
        android:text="Subscribed Groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subGroups"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/devGames"
        android:layout_alignEnd="@+id/devGames"
        android:layout_marginBottom="144dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subGamesList"
        android:id="@+id/subGroupList" />

    <TextView
        android:text="Subscribed Games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devGames"
        tools:text="Subscribed Games"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
