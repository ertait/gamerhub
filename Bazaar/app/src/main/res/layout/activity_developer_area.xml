<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_developer_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uvm.bazaar.DeveloperAreaActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilepic"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_below="@+id/usrnme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/usrnme"
        android:layout_alignEnd="@+id/usrnme" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/devGameList"
        android:text="Game List" />

    <TextView
    android:text="Welcome to Bazaar!"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tvWelcomeMsg"
    android:textSize="24sp"
    tools:text="Welcome to Bazaar!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usrnme"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/tvWelcomeMsg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your Games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devGames"
        tools:text="Your Games"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/devGames"
        android:layout_above="@+id/devGameList"
        android:id="@+id/listDevGames"/>

    <Button
        android:text="Invite User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listDevGames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/invite" />

</RelativeLayout>
